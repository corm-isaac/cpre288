#include<stdio.h>
#include <string.h>

int main() {
    //printf("Sum of x+y = %i", z);
    char msg[34] = "Microcontrollers are lots of fun!"; //len of 33
    //printf("%i", strlen(msg));
    char queue[21]; //twenty chars plus null terminator
    for(int i = 0; i < 20; i++){ //fill the queue with blank space 
        queue[i] = ' ';
    }
    
    //queue[19] = msg[0]; //20th char
    /*
    char temp[21];
    strcpy(temp, queue);
    temp[19] = msg[0];
    printf(temp);
    printf("\n");
    */
    int start = 19;
    int temp = 0;
    int ctrl_counter = 0;
    
    while(ctrl_counter < 20){
        //queue builder
        //s, e; start and end
        for(int i = 0; i < 20; i++){
            if(i < start){
                queue[i] = ' ';
            }
            else{
            queue[i] = msg[temp];
            temp++;
            }
        }
        printf(queue);
        printf("\n");
        temp = 0;
        start--;
        ctrl_counter++;
    }
    
    
    
    
    
    
    /*
    int count = 0;
    for(int i = 19; i > 0; i++){
        queue[i] = msg[count];
        count++;
        printf(queue);
        printf("\n");
    }
    */
    //printf(queue);
    
}
