    int fwd = 0;
    
    while(fwd < strlen(msg)){
        cursor = fwd;
        for(int i = 0; i < 20; i++){
            queue[i] = msg[cursor];
            cursor++;
        }
        fwd++;
        printf("%i", cursor);
        printf(" ");
      
        printf(queue);
        printf("\n");
    }
