#include<stdio.h>
#include <string.h>

int main() {
    
    char msg[] = "Microcontrollers are lots of fun!"; //len of 33
    
    char feed[42+strlen(msg)];
    //printf("%i", strlen(msg));
    char queue[21]; //twenty chars plus null terminator;
    for(int i = 0; i < 20; i++){ //fill the queue with blank space;
        queue[i] = ' ';
    }
    strcpy(feed, queue);
    strncat(feed,msg, strlen(msg));
    strncat(feed, queue, strlen(queue));
    //strncat(msg, queue, strlen(queue)); //msg is now msg + queue (post padding)
    
    //printf(feed);
    int cursor;
    int fwd = 1;
    
    while(fwd < (strlen(feed)-19)){
        cursor = fwd;
        //queue builder
        for(int i = 0; i < 20; i++){
            queue[i] = feed[cursor];
            cursor++;
        }
        fwd++;
        //printf("%i", cursor);
        //printf(" ");
      
        printf(queue);
        printf("\n");
    }
    
    
}
